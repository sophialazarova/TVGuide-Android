<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fdf9e2">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#e4e4e4"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Категории"
            android:textAlignment="center"
            android:background="#e4e4e4"
            android:textSize="35dp"
            android:padding="40dp"
            android:textColor="#2c3e50"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:background="#e4e4e4"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/group1"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:tag="series"
                    android:onClick="categorySelected"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="#2ecc71"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#27ae60"
                        android:text="Сериали"
                        android:padding="10dp"
                        android:textSize="36dp"
                        android:layout_marginBottom="30dp"
                        android:textAlignment="center"/>

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_height="150dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/series"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="30dp"
                        android:layout_width="fill_parent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Дали не дават любимият ти сериал?"
                        android:padding="10dp"
                        android:textSize="25dp"
                        android:layout_marginBottom="10dp"
                        android:textAlignment="center"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#2ecc71"></LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="#27ae60"></LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:tag="tv"
                    android:onClick="categorySelected"
                    android:layout_weight="1"
                    android:background="#f39c12"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#e67e22"
                        android:text="ТВ Програма"
                        android:padding="10dp"
                        android:textSize="36dp"
                        android:layout_marginBottom="30dp"
                        android:textAlignment="center"/>
                    <ImageView
                        android:id="@+id/image2"
                        android:layout_height="150dp"
                        android:scaleType="fitCenter"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="30dp"
                        android:src="@drawable/tv"
                        android:layout_width="fill_parent" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Дали не дават любимият ти сериал?"
                        android:padding="10dp"
                        android:textSize="25dp"
                        android:layout_marginBottom="10dp"
                        android:textAlignment="center"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#f39c12"></LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="#e67e22"></LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/group2"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:background="#e4e4e4"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:tag="sports"
                    android:onClick="categorySelected"
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#1abc9c"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#16a085"
                        android:text="Спорт"
                        android:padding="10dp"
                        android:textSize="36dp"
                        android:layout_marginBottom="30dp"
                        android:textAlignment="center"/>
                    <ImageView
                        android:id="@+id/image3"
                        android:layout_height="150dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/sports"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="30dp"
                        android:layout_width="fill_parent" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Дали не дават любимият ти сериал?"
                        android:padding="10dp"
                        android:textSize="25dp"
                        android:layout_marginBottom="10dp"
                        android:textAlignment="center"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#1abc9c"></LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="#16a085"></LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:tag="movies"
                    android:onClick="categorySelected"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#ef8889"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ef5756"
                        android:text="Филми"
                        android:padding="10dp"
                        android:textSize="36dp"
                        android:layout_marginBottom="30dp"
                        android:textAlignment="center"/>
                    <ImageView
                        android:id="@+id/image4"
                        android:layout_height="150dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/movies"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="30dp"
                        android:layout_width="fill_parent" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Дали не дават любимият ти сериал?"
                        android:padding="10dp"
                        android:textSize="25dp"
                        android:layout_marginBottom="10dp"
                        android:textAlignment="center"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#ef8889"></LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="#ef5756"></LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>